---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Thoughts, notes, and field reports.</h1>
				<p>
					A focused, content-first blog inspired by PaperMod. Expect short reads, long-form
					deep-dives, and evergreen references.
				</p>
				<div class="hero-links">
					<a class="primary" href="/blog">Read the blog</a>
					<a class="secondary" href="/about">About this site</a>
				</div>
			</section>
			<section class="section">
				<h2>Latest updates</h2>
				<p>
					New articles will show up here once published. Visit the blog index for the full archive.
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		display: grid;
		gap: 1rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--border);
	}
	.hero p {
		color: var(--muted);
		max-width: 42rem;
	}
	.hero-links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}
	.hero-links a {
		padding: 0.55rem 1.1rem;
		border-radius: 999px;
		text-decoration: none;
		font-weight: 600;
	}
	.hero-links .primary {
		background: var(--accent);
		color: white;
	}
	.hero-links .primary:hover {
		background: var(--accent-dark);
	}
	.hero-links .secondary {
		border: 1px solid var(--border);
		color: var(--text);
	}
	.section {
		padding-top: 2rem;
	}
</style>
